{
  "manifest_version": 3,
  "name": "深呼吸リマインダー",
  "description": "入力時に深呼吸を促すポップアップを表示します。",
  "version": "0.1.1",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["style/popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
